<?xml version="1.0" encoding="utf-8" ?>

<ContentView
    x:Class="CollectionViewHeaderEntryFocus.Views.ListItem"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CollectionViewHeaderEntryFocus.Views"
    x:DataType="local:ListItem">

    <Border
        x:Name="Container"
        Padding="8"
        BackgroundColor="White"
        HorizontalOptions="Fill">

        <VerticalStackLayout Spacing="8">

            <Label
                FontSize="22"
                Text="{Binding Title}"
                TextColor="Black" />

            <Label
                FontSize="18"
                Text="{Binding Description}"
                TextColor="Black" />

        </VerticalStackLayout>

    </Border>

</ContentView>